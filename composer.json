{
    "name": "dragon-code/codestyler",
    "description": "A tool to automatically fix Coding Style Standards issues by The Dragon Code.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "php",
        "json",
        "format",
        "formatter",
        "lint",
        "linter",
        "style",
        "code style",
        "codestyle",
        "standard"
    ],
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro",
            "homepage": "https://github.com/andrey-helldar"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/TheDragonCode"
        },
        {
            "type": "open_collective",
            "url": "https://opencollective.com/dragon-code"
        },
        {
            "type": "boosty",
            "url": "https://boosty.to/dragon-code"
        },
        {
            "type": "yoomoney",
            "url": "https://yoomoney.ru/to/410012608840929"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "dragon-code/pretty-array": "^4.1",
        "dragon-code/support": "^6.11.2",
        "friendsofphp/php-cs-fixer": "^3.17.0",
        "illuminate/view": "^10.13.2",
        "laravel-zero/framework": "^10.0.2",
        "mockery/mockery": "^1.6.1",
        "nunomaduro/larastan": "^2.6.0",
        "nunomaduro/termwind": "^1.15.1",
        "phpunit/phpunit": "^9.6.8",
        "symfony/console": "^6.3",
        "symfony/var-dumper": "^6.3",
        "symfony/yaml": "^6.3"
    },
    "suggest": {
        "ext-xdiff": "Install PHP extension to show diff in JSON files"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DragonCode\\CodeStyler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "bin": [
        "bin/codestyle",
        "builds/codestyle"
    ],
    "config": {
        "allow-plugins": {
            "dragon-code/codestyler": true,
            "ergebnis/composer-normalize": true,
            "friendsofphp/php-cs-fixer": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
