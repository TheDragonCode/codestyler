{
    "name": "dragon-code/codestyler",
    "description": "A tool to automatically fix Coding Style Standards issues by The Dragon Code.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "php",
        "json",
        "format",
        "formatter",
        "lint",
        "linter",
        "style",
        "code style",
        "codestyle",
        "standard"
    ],
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro",
            "homepage": "https://github.com/andrey-helldar"
        }
    ],
    "support": {
        "issues": "https://github.com/TheDragonCode/codestyler/issues",
        "source": "https://github.com/TheDragonCode/codestyler"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/TheDragonCode"
        },
        {
            "type": "boosty",
            "url": "https://boosty.to/dragon-code"
        },
        {
            "type": "yoomoney",
            "url": "https://yoomoney.ru/to/410012608840929"
        },
        {
            "type": "open_collective",
            "url": "https://opencollective.com/dragon-code"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "dragon-code/pretty-array": "^4.1",
        "dragon-code/support": "^6.11.2",
        "friendsofphp/php-cs-fixer": "^3.17",
        "illuminate/view": "^10.13.2",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.14",
        "laravel-zero/framework": "^10.0.2",
        "mockery/mockery": "^1.6.2",
        "nunomaduro/termwind": "^1.15.1",
        "pedrotroller/php-cs-custom-fixer": "^2.32",
        "pestphp/pest": "^2.6.3",
        "seld/jsonlint": "^1.10",
        "symfony/yaml": "^6.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "modules/laravel/pint/app/",
            "DragonCode\\CodeStyler\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "builds/codestyle"
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dragon-code/codestyler": true,
            "ergebnis/composer-normalize": true,
            "friendsofphp/php-cs-fixer": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
